<Window x:Class="VisualAcademy.Desktop.Demos.FrmTreeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualAcademy.Desktop.Demos"
        mc:Ignorable="d"
        Title="FrmTreeView" Height="450" Width="800">
    <Grid>
        <TreeView>
            <TreeViewItem>
                <TreeViewItem.Header>
                    <TextBlock>First item</TextBlock>
                </TreeViewItem.Header>

                <TreeViewItem Header="Child one" />
                <TreeViewItem Header="Child two" />
            </TreeViewItem>
            <TextBlock Text="Second item" />
        </TreeView>
    </Grid>
</Window>
