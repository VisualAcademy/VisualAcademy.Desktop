<Window x:Class="VisualAcademy.Desktop.TodoApp.TodoManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualAcademy.Desktop.TodoApp"
        mc:Ignorable="d"
        Title="TodoManager" Height="450" Width="800" FontSize="21">
    <Grid>
        <Button x:Name="btnAddTodo"
                Content="Add Todo"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"
                Click="btnAddTodo_Click"
                ></Button>
    </Grid>
</Window>
